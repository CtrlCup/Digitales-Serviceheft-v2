# Enable Rewrite Engine
RewriteEngine On
RewriteBase /

# DirectoryIndex f√ºr cleane URLs
DirectoryIndex index.php index.html

# Security: Block access to sensitive files and directories
<FilesMatch "^(\.htaccess|\.git.*|config\.php|bootstrap\.php|\.env)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block direct access to /public/ and /src/ directories
RewriteRule ^(public|src)/.*$ - [F,L]

# Remove .php extension from URLs
# Redirect /file.php to /file
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]

# Rewrite /file to /file.php if file.php exists
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.+)$ $1.php [L]

# Prevent directory listing
Options -Indexes

# UTF-8 Encoding
AddDefaultCharset UTF-8

# MIME Types for modern files
AddType image/svg+xml .svg
AddType image/x-icon .ico

# Browser Caching for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>
