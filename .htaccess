# Enable Rewrite Engine
RewriteEngine On
RewriteBase /

# DirectoryIndex f√ºr cleane URLs
DirectoryIndex index.php index.html

# Security: Block access to sensitive files and directories
<FilesMatch "^(\.htaccess|\.git.*|config\.php|bootstrap\.php|\.env)">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block direct access to /src/ directory, but allow /public
RewriteRule ^src/.*$ - [F,L]

# Redirect / to /public/ if index there exists
RewriteRule ^$ public/ [L]

# Canonicalize vehicles overview and explicit mapping for /overview
RewriteRule ^vehicles/overview/?$ /overview [R=301,L,NE]
RewriteRule ^overview/?$ public/vehicles/overview.php [L,QSA]

# Clean URLs mapped into /public
# 1) If a matching file exists under /public, serve it
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/public/%{REQUEST_URI} -f
RewriteRule ^(.*)$ public/$1 [L]

# 2) If a matching .php exists under /public, serve it
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/public/$1.php -f
RewriteRule ^(.+)$ public/$1.php [L,QSA]

# Prevent directory listing
Options -Indexes

# UTF-8 Encoding
AddDefaultCharset UTF-8

# MIME Types for modern files
AddType image/svg+xml .svg
AddType image/x-icon .ico

# Browser Caching for static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

